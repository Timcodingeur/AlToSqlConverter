<Window x:Class="frontdruconverteur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Convertisseur AL to SQL"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f8">

    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4F9DFE" Offset="0"/>
            <GradientStop Color="#6CD6FF" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="DropZoneStyle">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#9EB5C2"/>
            <Setter Property="Background" Value="#E8F0F8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style TargetType="ListBox" x:Key="SimpleListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Style="{StaticResource DropZoneStyle}"
                AllowDrop="True"
                DragEnter="Border_DragEnter"
                Drop="Border_Drop">
            <StackPanel>
                <TextBlock Text="📁 Glissez et déposez un dossier ici"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#3B3B3B"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <Border CornerRadius="8" Background="#FAFAFA" BorderBrush="#D0D0D0" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="320">
                        <ListBox Name="FileListBox"
                                 Height="320"
                                 Style="{StaticResource SimpleListBox}"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Border>

        <!-- Zone des boutons -->
        <StackPanel Grid.Row="1"
                    Margin="0,20,0,0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <Button x:Name="ConvertButton"
                    Content="⚙️ Convertir en script SQL"
                    Width="280"
                    Margin="0,0,0,10"
                    Click="ConvertButton_Click"
                    Style="{StaticResource PrimaryButton}"/>

            <Button x:Name="ShowMldButton"
                    Content="🗂️ Afficher le MLD depuis un script SQL"
                    Width="280"
                    Click="ShowMldButton_Click"
                    Style="{StaticResource PrimaryButton}"/>
        </StackPanel>

        <Grid x:Name="BusyOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <Border CornerRadius="10"
                    Padding="25"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="BusyText"
                               Text="⏳ Traitement en cours..."
                               FontSize="15"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"
                               TextAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="280"
                                 Height="16"
                                 Foreground="{StaticResource PrimaryGradient}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
